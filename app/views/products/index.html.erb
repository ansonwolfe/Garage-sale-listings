<h1>Internet-Assisted Garage Sale</h1>
<!-- check if a current user/session is logged in, show the user ID and name -->
<% if current_user %>
	<h5>Logged in as:  ID #<%= session[:user_id] %> 
	<br>
		Name: <%= current_user.name %>	
	</h5>
<% end %>	

<%= Product.count %> total products
<p><a href="products/new">Create a new product</a></p>

<table class="table table-bordered table-hover table-condensed">
	<thead>
		<tr>
			<th>Product ID</th>
			<th>Name</th>
			<th>Description</th>
			<th>Category</th>
			<th>Price</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<!-- show all products -->
<% @products.each do |product| %>
		<tr>
			<td><%= product.id %></td>
			<td><a href="products/<%= product.id%>"><%= product.name %></a></td>
			<td><a href="products/<%= product.id%>"><%= product.description %></td>
			<td><%= product.category.name %></td>
			<td><%= product.pricing %></td>
			<td><a href="products/<%= product.id%>/edit">Edit</a></td>
			<td>	
				<!-- delete button -->
				<form action="/products/<%= product.id %>" method="post">
					<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
					<input type="submit" value="delete" class="btn btn-danger">
					<input type="hidden" name="_method" value="delete">
				</form>
			</td>
		</tr>	
<% end -%>			
	</tbody>
</table>
<!-- if user is logged in, show logout, else show sign in if not logged -->
<% if current_user %>
	<p><a href="/signout">Logout</a></p>
<% else %>
	<p><a href="/signin">Log In</a></p>
<% end %>		
